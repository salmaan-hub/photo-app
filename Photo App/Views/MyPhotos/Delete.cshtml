@model Photo_App.Models.MyPhotos

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MyPhotos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Image to be deleted
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Image/" + Model.PhotoName)" asp-append-version="true" width="250px" height="250px"/>
